<h3>Editar Categoria</h3>
<div class="card">
    <div class="card-body">
    <form action="/admin/postagens/edit" method="POST">
        <input type="hidden" name="id" value="{{postagens._id}}">
        <label for="titutlo">Titulo: </label>
        <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagens.titulo}}">

        <label for="slug">Slug: </label>
        <input type="text" name="slug" id="slug" class="form-control" value="{{postagens.slug}}"> 
        
        <label for="descricao">Descrição: </label>
        <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagens.descricao}}">

        <label for="conteudo">Conteudo: </label>
        <textarea name="conteudo" id="conteudo" class="form-control"> {{postagens.conteudo}}</textarea>

        <label for="categorias">Categoria: </label>
        <select name="categorias" id="categorias" class="form-select">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select>
        <button type="submit" class="btn btn-success mt-2">Editar postagem</button>    
    </form>
    </div>
</div>